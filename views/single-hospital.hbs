<link rel="stylesheet" href="/style/style.css">
<link rel="stylesheet" href="/style/animation.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"
    integrity="sha512-wR4oNhLBHf7smjy0K4oqzdWumd+r5/+6QO/vDda76MW5iug4PT7v86FoEkySIJft3XA0Ae6axhIvHrqwm793Nw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
<section class="FullContent">

    <header class="SHP-header">
        <div class="headerContent-SHP">
            <ion-icon name="arrow-back-outline" class="goBack"></ion-icon>
            <p class="heading SHP-title">Hospital</p>
        </div>
    </header>

    {{#each singleHospitalsData}}
    <section class="SHP-doc-add-info">
        <div class="doc-ad-infoComponent">
            <div class="SHP-docNameAdd">
                <h1>{{this.hospitalName}}</h1>
                <div class="SHP-docAdd">
                    <ion-icon name="location-outline"></ion-icon>
                    <p>{{this.hospitalLocation}}</p>
                </div>
            </div>
            <div class="SHP-callToDoc">
                <a href="tel:{{this.phoneNumber}}">
                    <ion-icon name="call-outline"></ion-icon>
                </a>
            </div>
        </div>
    </section>

    <div class="imgData" style="display:none">{{this.hospitalImgs}}</div>
    <section class="SHP-ImgSlider">
        <div class="SHP-allHospitalImages">
        </div>
    </section>

    <section class="SHP-AboutHospital">
        <h2>About {{this.hospitalName}}</h2>
        <p>{{this.hospitalAbout}}</p>
    </section>

    <section class="SHP-AboutHospital hospitalMap">
        <h2>Hospital On Map</h2>
        <div class="hospitalIframe">
            <iframe src="{{this.hospitalIframe}}" width="600" height="450" style="border:0;" allowfullscreen=""
                loading="lazy"></iframe>
        </div>

    </section>


    <div class="allTreat" style="display:none">{{this.treatments}}</div>



    <section class="SHP-calltoHospitalBTN">
        <div class="btnSection">
            <a href="tel:{{this.phoneNumber}}"><button>Call Now</button></a>
        </div>
    </section>
</section>
{{/each}}


    <section class="SHP-AboutHospital hospitalTreatments">
        <h2>Treatments</h2>
        <div class="allTreatments"></div>
    </section>


<script src="/js/SHP.js"></script>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"
    integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>


    let allTreatments = document.querySelector('.allTreatments')
    let allTreat = document.querySelector('.allTreat').innerText;

    allTreatments.innerHTML = 'Null';

    let treatArr = allTreat.split(',')

    let html = "";

    for(let i = 0; i < treatArr.length; i++){
        html += `<p class="SHP-Treatment">${treatArr[i]}</p>`;
    }

    allTreatments.innerHTML = html;


    let allHospitalImages = document.querySelector('.SHP-allHospitalImages')
    let imgData = document.querySelector('.imgData').innerText
    console.log(imgData)

    let newImgs = imgData.split(',')
    console.log(newImgs[0])


    for (let i = 0; i <= newImgs.length - 2; i++) {
        let newele = document.createElement("img");
        newele.setAttribute('src', `/uploads/${newImgs[i]}`)
        allHospitalImages.appendChild(newele);
    }
    $('.SHP-allHospitalImages').slick({
        arrows: false,
        dots: false,
        infinite: false,
        speed: 300,
        slidesToShow: 1.5,
        adaptiveHeight: true,
        autoplay: true,
        lazyLoad: 'progressive',
        useCSS: true,
        mobileFirst: true,
        zIndex: 0
    });



</script>