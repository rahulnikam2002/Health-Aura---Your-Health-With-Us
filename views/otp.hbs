
<link rel="stylesheet" href="/style/changePassword.css">
<div class="goBack" onclick="goBack()">
    <ion-icon name="arrow-back-outline"></ion-icon>
</div>

{{!-- CP => change Password --}}
<div class="emailSection-CP">
    <h1>Enter OTP</h1>
    {{#if userEmail}}
    <p>We have send you an 4 Digit OTP on <span class="userEmailText"><a href="https://mail.google.com" target="_black">{{userEmail}}</a></span>. Enter the 4 digit code below to confirm it's your Email</p>

    <div class="emailForm">
        <form action="/v1/auth/credentials/password/{{userEmail}}" method="POST">
            <input type="number" name="userOTP" autocomplete="off" placeholder="Enter OTP" required>
            <input type="submit" value="Verify"></input>
        </form>
{{#if message}}
        <p class="errorMSG">{{message}}</p>
{{/if}}
        
    </div>
    {{/if}}

</div>

<div class="emailNotReceivedSec">
    <p>Didn't received any Email? Try to check in spam</p>
</div>

