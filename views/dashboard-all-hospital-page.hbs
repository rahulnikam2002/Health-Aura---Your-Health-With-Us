<link rel="stylesheet" href="/style/adminDashboard.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="dashboard">

    <div class="db-left">
        {{> dashboard-sidebar}}
    </div>
    <div class="db-right">

        {{> dashboard-header}}

        <div class="pageHeading">
            <h1>All hospitas</h1>
            <div class="addHospitalBtn-dashboard">
                <a href="/dashboard/add-new-hospital"><button>Add New Hospital</button></a>
            </div>
        </div>

        <div class="allHospitalDataList">
            <table>
                <tr>
                    <th>Hospital Name</th>
                    <th>City Name</th>
                    <th>Actions</th>
                </tr>

            {{#each allHospitalsData}}
                <tr>
                    <td>{{this.hospitalName}}</td>
                    <td>{{this.City}}</td>
                    <td class="actionBtns-AHL">  {{!-- AHL => All Hospital Listing --}}
                        <a href="/hospital/{{this.hospitalName}}">View</a>
                        <a href="#">Edit</a>
                        <a href="/dashboard/hospital/delete/{{this.hospitalName}}">Delete</a>
                    </td>
                </tr>
            {{/each}}


            </table>
        </div>


    </div>
</div>
</div>


{{> popup-msg}}

<script src="/js/adminDashboard.js"></script>
