<link rel="stylesheet" href="/style/adminDashboard.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="dashboard">

    <div class="db-left">
        <div class="websiteIcon">
            <h1><a href="/dashboard">HealthAura</a></h1>
        </div>

        <div class="menuItems">

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="home-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#dashboardCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Dashboard</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="dashboardCollapse">
                    <p class="singleDropDown-Text"><a href="/" target="_blank">Visit Site</a></p>
                </div>
            </div>

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="medkit-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#hospitalCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Hospitals</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="hospitalCollapse">
                    <p class="singleDropDown-Text"><a href="/dashboard/add-new-hospital">Add Hospital</a></p>
                    <p class="singleDropDown-Text"><a href="/dashboard/all-hospitals">All Hospitals</a></p>
                </div>
            </div>

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="person-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#doctorCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Doctors</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="doctorCollapse">
                    <p class="singleDropDown-Text"><a href="#">Add Doctor</a></p>
                    <p class="singleDropDown-Text"><a href="#">All Doctors</a></p>
                </div>
            </div>

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="bandage-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#medicalCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Medicals</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="medicalCollapse">
                    <p class="singleDropDown-Text"><a href="#">Add Medical</a></p>
                    <p class="singleDropDown-Text"><a href="#">All Medicals</a></p>
                </div>
            </div>

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="car-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#ambulanceCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Ambulance</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="ambulanceCollapse">
                    <p class="singleDropDown-Text"><a href="#">Add Ambulance</a></p>
                    <p class="singleDropDown-Text"><a href="#">All Ambulance</a></p>
                </div>
            </div>

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="person-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#userCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Users</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="userCollapse">
                    <p class="singleDropDown-Text"><a href="#">All Users</a></p>
                </div>
            </div>

            <div class="leftDropdownItems">
                <div class="dashboard-item">
                    <div class="leftIcon-text">

                        <ion-icon name="car-outline"></ion-icon>
                        <a data-bs-toggle="collapse" href="#settingCollapse" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            <p>Settings</p>
                        </a>
                    </div>
                </div>
                <div class="collapse" id="settingCollapse">
                    <p class="singleDropDown-Text"><a href="#">View Profile</a></p>
                    <p class="singleDropDown-Text"><a href="#">Edit Profile</a></p>
                    <p class="singleDropDown-Text"><a href="/v1/auth/logout">Logout</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="db-right">
        <div class="navHeader">
            <div class="left-nh">
                <p><a href="/" target="_blank">View Website</a></p>
                <p><a href="/dashboard/add-new-hospital">Add Hospital</a></p>
                <p><a href="">Add Doctor</a></p>
                <p><a href="">Add Medical</a></p>
                <p><a href="">Add Ambulance</a></p>
            </div>

            {{#if ProfileImg}}
            {{#each admin}}
            <div class="right-vh">
                <p>{{this.userName}}</p>
                <img src="/uploads/{{this.userImg}}" alt="{{this.userName}}">
            </div>
            {{/each}}
            {{/if}}

            {{#if noProfileImg}}
            {{#each admin}}
            <div class="right-vh">
                <p>{{this.userName}}</p>
                <img src="/img/user.png" alt="{{this.userName}}">
            </div>
            {{/each}}
            {{/if}}

        </div>

        <div class="pageHeading">
            <h1>Dashboard</h1>
        </div>

        <div class="allAnalytics">
            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Hospitals</p>
                    <img src="/img/hospital.png" alt="">
                </div>
                <div class="analytics-count">
                    <p>5000</p>
                    <p>Total Added</p>
                </div>
            </div>


            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Doctors</p>
                    <img src="/img/doctor (3).png" alt="">
                </div>
                <div class="analytics-count">
                    <p>50</p>
                    <p>Total Added</p>
                </div>
            </div>



            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Medicals</p>
                    <img src="/img/medical-history (1).png" alt="">
                </div>
                <div class="analytics-count">
                    <p>152</p>
                    <p>Total Added</p>
                </div>
            </div>



            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Ambulance</p>
                    <img src="/img/ambulance.png" alt="">
                </div>
                <div class="analytics-count">
                    <p>83</p>
                    <p>Total Added</p>
                </div>
            </div>



            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>users</p>
                    <img src="/img/users.png" alt="">
                </div>
                <div class="analytics-count">
                    <p>90</p>
                    <p>Total Users</p>
                </div>
            </div>
        </div>
        <div class="graphs">
            <div class="totalPostsAnyData">
                <canvas id="myChart" style="width:100%;max-width:700px"></canvas>
            </div>
            <div class="totalPostsAnyData">
                <canvas id="myPieChart" style="width:100%;max-width:600px"></canvas>
            </div>
        </div>

    </div>
</div>

<script src="/js/adminDashboard.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script>


<script>
    var xValues = ["Hospitals", "Doctors", "Medicals", "Ambulances"];
    var yValues = [55, 49, 44, 24];
    var barColors = ["#6200ee", "#B53471", "#009432", "#6F1E51"];

    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        borderRadius: "50px",
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "Total Uploads"
            }
        }
    });



    var xValues = ["Hospitals", "Doctors", "Medicals", "Ambulances"];
    var yValues = [55, 49, 44, 24];
    var barColors = [
        "#6200ee",
        "#ee6002",
        "#2b5797",
        "#e8c3b9",
        "#1e7145"
    ];

    new Chart("myPieChart", {
        type: "pie",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            title: {
                display: true,
                text: "Total Uploaded"
            }
        }
    });
</script>