<link rel="stylesheet" href="/style/adminDashboard.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="dashboard">

    <div class="db-left">
        {{> dashboard-sidebar}}
    </div>
    <div class="db-right">
            {{> dashboard-header}}

        <div class="pageHeading">
            <h1>Dashboard</h1>
        </div>

        <div class="allAnalytics">
            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Hospitals</p>
                    <img src="/img/hospital.png" alt="">
                </div>
                <div class="analytics-count">
                    <p>5000</p>
                    <p>Total Added</p>
                </div>
            </div>


            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Doctors</p>
                    <img src="/img/doctor (3).png" alt="">
                </div>
                <div class="analytics-count">
                    <p>50</p>
                    <p>Total Added</p>
                </div>
            </div>



            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Medicals</p>
                    <img src="/img/medical-history (1).png" alt="">
                </div>
                <div class="analytics-count">
                    <p>152</p>
                    <p>Total Added</p>
                </div>
            </div>



            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>Ambulance</p>
                    <img src="/img/ambulance.png" alt="">
                </div>
                <div class="analytics-count">
                    <p>83</p>
                    <p>Total Added</p>
                </div>
            </div>



            <div class="analytics-card">
                <div class="upper-img-heading">
                    <p>users</p>
                    <img src="/img/users.png" alt="">
                </div>
                <div class="analytics-count">
                    <p>90</p>
                    <p>Total Users</p>
                </div>
            </div>
        </div>
        <div class="graphs">
            <div class="totalPostsAnyData">
                <canvas id="myChart" style="width:100%;max-width:700px"></canvas>
            </div>
            <div class="totalPostsAnyData">
                <canvas id="myPieChart" style="width:100%;max-width:600px"></canvas>
            </div>
        </div>

    </div>
</div>

<script src="/js/adminDashboard.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script>


<script>
    var xValues = ["Hospitals", "Doctors", "Medicals", "Ambulances"];
    var yValues = [55, 49, 44, 24];
    var barColors = ["#6200ee", "#B53471", "#009432", "#6F1E51"];

    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        borderRadius: "50px",
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "Total Uploads"
            }
        }
    });



    var xValues = ["Hospitals", "Doctors", "Medicals", "Ambulances"];
    var yValues = [55, 49, 44, 24];
    var barColors = [
        "#6200ee",
        "#ee6002",
        "#2b5797",
        "#e8c3b9",
        "#1e7145"
    ];

    new Chart("myPieChart", {
        type: "pie",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            title: {
                display: true,
                text: "Total Uploaded"
            }
        }
    });
</script>