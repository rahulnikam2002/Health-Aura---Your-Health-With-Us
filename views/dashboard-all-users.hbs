<link rel="stylesheet" href="/style/adminDashboard.css">
<style>
    td,
    th {
        border: 1px solid var(--light-text-color) !important;
        padding: 8px;
        color: var(--dark-color);
        width: 0 !important;
    }

    .actionBtns-AHL a {
        color: var(--white);
        background-color: var(--primary);
        border: none;
        padding: 2px 15px;
        outline: none;
        text-decoration: none;
        font-size: 12px;
        margin: 0px 5px;
        border-radius: 4px;
        width: 0;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="dashboard">

    <div class="db-left">
        {{> dashboard-sidebar}}
    </div>
    <div class="db-right">

        {{> dashboard-header}}

        <div class="pageHeading">
            <h1>All Users</h1>
            {{!-- <div class="addHospitalBtn-dashboard">
                <a href="/dashboard/add-new-hospital"><button>Add New user</button></a>
            </div> --}}
        </div>

        <div class="allHospitalDataList">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Email ID</th>
                    <th>City</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>

                {{#each allUsers}}
                <tr>
                    <td>{{this.userName}}</td>
                    <td>{{this.userEmail}}</td>
                    <td>{{this.userCity}}</td>
                    <td>{{this.role}}</td>
                    <td class="actionBtns-AHL"> {{!-- AHL => All Hospital Listing --}}
                        <a href="#">Edit</a>
                        <a href="#">Delete</a>
                    </td>
                </tr>
                {{/each}}


            </table>
        </div>


    </div>
</div>
</div>


{{> popup-msg}}

<script src="/js/adminDashboard.js"></script>
