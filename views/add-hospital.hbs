<link rel="stylesheet" href="/style/adminDashboard.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="dashboard">

    <div class="db-left">
        {{> dashboard-sidebar}}
    </div>
    <div class="db-right">

        {{> dashboard-header}}

        <div class="pageHeading">
            <h1>Add new hospital</h1>
        </div>
        <form action="/dashboard/add-new-hospital" method="post" enctype="multipart/form-data">
            <div class="uploadHospitalFormSection">
                <div class="UHS-left">
                    <div class="hospitalName singleField">
                        <input type="text" name="hospitalName" placeholder="Hospital name">
                    </div>
                    <div class="hospital-phone-location col2_fields">
                        <input class="leftField" type="text" name="hospitalPhone" placeholder="Hospital Contact">
                        <input class="rightField" type="text" name="hospitalAddress" placeholder="Address">
                    </div>
                    <div class="hospital-city-type col2_fields">
                        <input class="leftField" type="text" name="hospitalCity" placeholder="City">
                        <input class="rightField" type="text" name="hospitalType" placeholder="Type">
                    </div>
                    <div class="hospital-iFrame singleField">
                        <input type="text" name="hospitalIframe" placeholder="iFrame">
                    </div>
                    <div class="hospital-treatments singleField">
                        <textarea style="resize: none;" name="hospitalTags" id="" cols="30" rows="5" placeholder="Treatments, Separate by commas"></textarea>
                    </div>
                    <div class="hospital-About singleField">
                        <textarea style="resize: none;" name="hospitalAbout" id="" cols="30" rows="5" placeholder="About Hospital max 50 words"></textarea>
                    </div>
                </div>

                <div class="UHS-right">
                    <div class="UHS-featuredImg">
                        <input type="file" name="featuredImg" id="featuredImg">
                        <label for="featuredImg">Featured Image</label>
                    </div>
                    <div class="UHS-featuredImg">
                        <input type="file" name="multipleImgs" id="multipleImgs" multiple>
                        <label for="multipleImgs">Hospital Images</label>

                    </div>
                    <div class="UHS-featuredImg">
                        <button class="submit-UH" type="submit">Upload Hospital</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
</div>

<script src="/js/adminDashboard.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>